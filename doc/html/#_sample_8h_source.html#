<a name="l00076"></a>00076         {
<a name="l00077"></a>00077                 <span class="keywordtype">char</span> out = 0;
<a name="l00078"></a>00078                 incrementPhase();
<a name="l00079"></a>00079                 <span class="keywordflow">if</span> (phase_fractional &lt; (<span class="keywordtype">unsigned</span> <span class="keywordtype">long</span>) NUM_TABLE_CELLS&lt;&lt;SAMPLE_F_BITS )
<a name="l00080"></a>00080                         out = readTable();
<a name="l00081"></a>00081                 <span class="keywordflow">return</span> out;
