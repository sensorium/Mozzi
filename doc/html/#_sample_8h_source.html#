<a name="l00124"></a>00124                 {
<a name="l00125"></a>00125                         phase_increment_fractional = (((<span class="keywordtype">unsigned</span> long)freq * NUM_TABLE_CELLS)/UPDATE_RATE) &lt;&lt; SAMPLE_F_BITS; <span class="comment">// Obvious but slow</span>
<a name="l00126"></a>00126                 }
<a name="l00127"></a>00127         }
