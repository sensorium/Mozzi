<a name="l00091"></a><a class="code" href="class_sample.html#a13ff9d4206b5e14e2f030ef9ced8a7d0">00091</a>         <span class="keywordtype">char</span> <a class="code" href="class_sample.html#a13ff9d4206b5e14e2f030ef9ced8a7d0" title="Returns the next sample given a phase modulation value.">phMod</a>(<span class="keywordtype">long</span> phmod_proportion)
<a name="l00092"></a>00092         {
<a name="l00093"></a>00093                 incrementPhase();
<a name="l00094"></a>00094                 <span class="keywordflow">return</span> (<span class="keywordtype">char</span>)pgm_read_byte_near(table + (((phase_fractional+(phmod_proportion * NUM_TABLE_CELLS))&gt;&gt;SAMPLE_F_BITS) &amp; (NUM_TABLE_CELLS - 1)));
<a name="l00095"></a>00095         }
<a name="l00096"></a>00096 
<a name="l00097"></a>00097 
<a name="l00104"></a>00104         <span class="keyword">inline</span>
<a name="l00105"></a><a class="code" href="class_sample.html#a68ad6a694e7435b193915376fe8ad36c">00105</a>         <span class="keywordtype">void</span> <a class="code" href="class_sample.html#a68ad6a694e7435b193915376fe8ad36c" title="Set the frequency using 24n8 fixed-point number format.">setFreq_n8</a>(<span class="keywordtype">unsigned</span> <span class="keywordtype">long</span> freq)
